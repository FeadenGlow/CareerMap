generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(uuid())
  email      String     @unique
  password   String
  role       Role       @default(EMPLOYEE)
  position   Position?  @relation(fields: [positionId], references: [id], onDelete: SetNull)
  positionId String?
  skills     UserSkill[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Position {
  id          String       @id @default(uuid())
  title       String
  level       Int
  department  String
  users       User[]
  from        Transition[] @relation("FromPosition")
  to          Transition[] @relation("ToPosition")
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Skill {
  id            String       @id @default(uuid())
  name          String
  category      String?
  transitions   Transition[]
  users         UserSkill[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model UserSkill {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  skill     Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)
  skillId   String
  createdAt DateTime @default(now())

  @@unique([userId, skillId])
}

model Transition {
  id              String    @id @default(uuid())
  type            TransitionType
  fromPosition    Position  @relation("FromPosition", fields: [fromPositionId], references: [id], onDelete: Cascade)
  fromPositionId  String
  toPosition      Position  @relation("ToPosition", fields: [toPositionId], references: [id], onDelete: Cascade)
  toPositionId   String
  requiredSkills  Skill[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

enum Role {
  EMPLOYEE
  HR
  ADMIN
}

enum TransitionType {
  VERTICAL
  HORIZONTAL
  CHANGE
}

